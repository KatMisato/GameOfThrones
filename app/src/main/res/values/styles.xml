<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CharacterInfoLabelStyle">
        <item name="android:layout_width">@dimen/character_info_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/character_info_margin_top</item>
        <item name="android:drawablePadding">@dimen/character_info_drawable_padding</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/character_info_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawableLeft">@drawable/ic_icon_decor</item>
    </style>

    <style name="CharacterParentsInfoLabelStyle" parent="CharacterInfoLabelStyle">
        <item name="android:drawableLeft">@null</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingStart">32dp</item>
    </style>

    <style name="CharacterInfoTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/character_default_margin</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/character_info_text_size</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

</resources>