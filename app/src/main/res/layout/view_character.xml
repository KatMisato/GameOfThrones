<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cert_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/house_icon"
        android:layout_width="@dimen/character_item_icon_size"
        android:layout_height="@dimen/character_item_icon_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/character_item_icon_margin"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/character_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/character_item_icon_margin"
        android:layout_marginEnd="@dimen/character_item_icon_margin"
        android:layout_toEndOf="@+id/house_icon"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_name"
        android:layout_marginTop="@dimen/character_default_margin"
        android:layout_marginEnd="@dimen/character_item_icon_margin"
        android:layout_marginBottom="@dimen/character_item_icon_margin"
        android:layout_toEndOf="@+id/house_icon"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="@color/color_gray" />
</RelativeLayout>
